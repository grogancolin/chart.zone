						p iTunes Top 100
							br
							|(Global)
			.column2
				a(href="http://localhost:8080?chartname=Billboard Hot 100", title="Billboard Hot 100")
					.box.usa
						p Billboard Hot 100
							br
							|(USA)
				a(href="http://localhost:8080?chartname=Billboard Hot 200", title="Billboard Hot 200")
					.box.usa
						p Billboard 200
							br
							|(USA)
				a(href="http://localhost:8080?chartname=Billboard Canadian Hot 100", title="Billboard Canadian Hot 100")
					.box.canada
						p Billboard Canadian Hot 100
							br
							|(CAN)
			.column3
				a(href="http://localhost:8080?chartname=Irish Top 100", title="Irish Top 100")
