extends layout
block body
	- import chartzone.db;
	- import std.datetime;

	#header
		a(href="http://localhost:8080/")
			img(src="../images/ChartZoneLarge.png", alt="Chart.Zone Homepage", title="Chart.Zone Homepage")
		a(href="http://localhost:8080/about", title="About Us")
			h1 About Us
		a(href="http://localhost:8080/contact", title="Contact Us")
			h1 Contact Us
	#outerWrapper
		#innerWrapper
			.column1
				a(href="http://localhost:8080?chartname=BBC Top 40", title="BBC Top 40")
					.box.uk
						p BBC Top 40
							br
							|(UK)
				a(href="http://localhost:8080?chartname=BBC Dance Top 40", title="BBC Dance Top 40")
